<div class="card">
  <h2>Orders (Admin)</h2>
  <table>
    <thead><tr><th>Date</th><th>Customer</th><th>Total</th><th></th></tr></thead>
    <tbody>
      {{#each orders}}
        <tr>
          <td class="muted">{{createdAt}}</td>
          <td>{{customerName}}</td>
          <td>{{money total}}</td>
          <td><a href="/orders/{{_id}}">View</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
